.header{
  font-size: 14px;
  font-weight: bold;
  margin: 20px;
}
.th-td{
  display: inline-block;
  height: 40px;
  line-height: 40px;
  position: relative;
  top: -5px;
}
.section{
  border: solid 1px #c7c7c7;
  height: 20px;
  position: relative;
  line-height: 20px;
  width: 100px;
  display: inline-block;
  top: 3px;
}
.tbody{
  display: inline-block;
  font-size: 12px;
  height: 30px;
  line-height: 30px;
  position: relative;
  top: -5px;


}
.th text{
  display: inline-block;
}
.td-0,.tbody-0,.th-0{
  width:100px;
}

.td-1{
  width: 140px;
}


.tbody-1,.th-1{
  position: relative;
  width: 70px;
}
.tbody-3,.th-2{
  width: 70px;
}
.week-item{
  width: 140px;
}
.td-2,.tbody-2,.th-3{
  width: 100px;
}
.tbody-2{
  overflow: hidden;
  vertical-align: middle
}
.option{
  display: inline-block;
