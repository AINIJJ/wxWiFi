  line-height: 40px;
  font-size: 16px;
  border-top:solid 1px #8f8d7c ; 
}
.th-body{
  width: 100%;
  display: inline-block;
  height:30px; 
  margin-top: 10px;
  background:-webkit-gradient(linear, 0% 70%, 0% 100%,from(#f8fafd), to(#d6e1f1)) ;
}
.timer{
  height: 30px;
  display: inline-block;
  width: 150rpx;
  line-height: 30px;
}
.first,.second{
  text-align: center;

}
.tbody{
  border-top: none;
}
.second-td{
  width: 42px;
}

.toggle{
   text-align: center;
}
.btn-group{
  margin-top: 20px;
}
.btn-group button{
 display: inline-block;
 width: 80px;
 height: 35px;
